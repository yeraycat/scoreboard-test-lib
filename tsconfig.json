{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es5", "es2015", "es2016", "dom", "esnext"],
        "jsx": "react",
        "module": "es2015",
        "types": ["node"],
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "declaration": true,
        "outDir": "dist/esm",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
}
